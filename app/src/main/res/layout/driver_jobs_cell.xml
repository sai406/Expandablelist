<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="2dp">

    <TextView
        android:id="@+id/txt_joborderid"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:padding="2dp"
        android:text="Job ID"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_clientref"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="3"

        android:padding="2dp"
        android:text="Client Ref"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_pickuploc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="3"

        android:padding="2dp"
        android:text="Pick up Location"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_deliveryloc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:padding="2dp"

        android:text="Delivery Location"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="3"

        android:padding="2dp"
        android:text=" Type "
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_eta"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="3"

        android:padding="2dp"
        android:text=" ETA "
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_qty"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:padding="2dp"
        android:text=" QTY "
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_goodsavaliable"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:padding="2dp"
        android:text=" Goods Available Time "
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_opdate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="3"

        android:padding="2dp"
        android:text=" OP Date "
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />


</LinearLayout>